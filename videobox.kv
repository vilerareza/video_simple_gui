<VideoBox>:
    
    manager: app.manager
    frame_box: frame_box_kv
    control_bar: control_bar_kv

    orientation: 'vertical'

    canvas.before :
        Color : 
            rgb : (0.3,0.3,0.3)
        Rectangle :
            size : self.size
            pos : self.pos

    FloatLayout:
        size_hint :(1, 1) 
        canvas.before :
            Color : 
                rgb : (0.1,0.1,0.1)
            Rectangle :
                size : self.size
                pos : self.pos
        FrameBox:
            id : frame_box_kv
            pos_hint : {'center_x':0.5, 'center_y': 0.5}
            #pos_hint : {'center_x':0.5}
            size_hint :(0.95, 0.95) 
            control_bar : control_bar_kv

    ControlBar:
        id: control_bar_kv
        size_hint: (1, None) 
        height : dp(60)
        frame_box: frame_box_kv
        #pos_hint: {'center_x' : 0.5}
        #y : root.y

